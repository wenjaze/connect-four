<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;"
           xmlns="http://javafx.com/javafx/16" fx:controller="connectfour.javafx.controllers.StartUpController">
   <children>
      <Button id="playButton" fx:id="switchToGameButton" alignment="CENTER" mnemonicParsing="false"
              onAction="#handleSwitchToGameButton" prefHeight="50.0" prefWidth="100.0"
              style="-fx-background-color: lightgrey;" text="PLAY" textAlignment="CENTER" textFill="#4c6cfc">
         <font>
            <Font size="20.0"/>
         </font>
         <effect>
            <Blend/>
         </effect>
         <cursor>
            <Cursor fx:constant="HAND"/>
         </cursor>
      </Button>
      <Label fx:id="welcomeMessage" text="WELCOME" textAlignment="CENTER" textFill="#4c6cfc">
         <StackPane.margin>
            <Insets top="-200.0"/>
         </StackPane.margin>
         <font>
            <Font size="49.0"/>
         </font>
      </Label>
      <TextField fx:id="player1" alignment="BOTTOM_LEFT" maxHeight="-Infinity" maxWidth="-Infinity"
                 minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="200.0"
                 promptText="Red player name">
         <StackPane.margin>
            <Insets top="200.0"/>
         </StackPane.margin>
      </TextField>
      <TextField fx:id="player2" alignment="BOTTOM_LEFT" layoutX="210.0" layoutY="295.0" maxHeight="-Infinity"
                 maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="200.0"
                 promptText="Blue player name">
         <opaqueInsets>
            <Insets/>
         </opaqueInsets>
         <StackPane.margin>
            <Insets top="300.0"/>
         </StackPane.margin>
      </TextField>
   </children>
</StackPane>
